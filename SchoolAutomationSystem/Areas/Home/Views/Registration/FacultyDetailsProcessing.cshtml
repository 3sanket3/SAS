
@model SchoolAutomationSystem.Areas.Home.Models.FacultyDetailsViewModel

           
                <div class="fieldset-content">
                    <fieldset class="scheduler-border">
                        <legend class="scheduler-border">Faculty Details</legend>
                        
                        <div class="form-inline">
                        <div class="form-group">
                                @Html.Label("Faculty ID")
                            
                                @Html.TextBox("Model.FacultyProcessingData.FacultyId", Model.FacultyProcessingData.FacultyId == null ? 0 : Model.FacultyProcessingData.FacultyId, new { @class = "form-control mrgn0 width-150", @style = " placeholder='Short Name'" , @disabled = "disabled"})
                        </div>

                            <div class="form-group">
                                @Html.Label("Short Name")
                            
                                @Html.TextBox("Model.FacultyProcessingData.FacultyUniqueName", Model.FacultyProcessingData.FacultyUniqueName == null ? string.Empty : Model.FacultyProcessingData.FacultyUniqueName, new { @class = "form-control mrgn0 width-150", @style = " placeholder='Short Name'" })
                            </div>
                          
                        @*    @Html.Hidden("Model.FacultyProcessingData.FacultyId", Model.FacultyProcessingData.FacultyId, new { id = "Model_FacultyId" })*@

                            <div class="form-group">
                                @Html.Label("First Name")
                            
                                @Html.TextBox("Model.FacultyProcessingData.FirstName", Model.FacultyProcessingData.FirstName == null ? string.Empty : Model.FacultyProcessingData.FirstName, new { @class = "form-control mrgn0 width-150", @style = " placeholder='Name'" })
                            </div>
                          
                           <div class="form-group">
                                @Html.Label("Last Name")
                            
                                @Html.TextBox("Model.FacultyProcessingData.LastName", Model.FacultyProcessingData.LastName == null ? string.Empty : Model.FacultyProcessingData.LastName, new { @class = "form-control mrgn0 width-150", @style = " placeholder='Name'" })
                            </div>

                            <div class="form-group">
                                @Html.Label("Email Id")
                            
                                @Html.TextBox("Model.FacultyProcessingData.EmailAddress", Model.FacultyProcessingData.EmailId == null ? string.Empty : Model.FacultyProcessingData.EmailId, new { @class = "form-control mrgn0 width-150", @style = " placeholder='Email Address'" })
                            </div>

                            <div class="form-group">
                                @Html.Label("Password")
                            
                                @Html.Password("Model.FacultyProcessingData.Password", Model.FacultyProcessingData.Password == null ? string.Empty : Model.FacultyProcessingData.Password, new { @class = "form-control mrgn0 width-150", @style = " placeholder='Password'" })
                            </div>

                            <div class="form-group">
                                @Html.Label("Birthdate")
                            
                                @Html.TextBox("Model.FacultyProcessingData.BirthDate", Model.FacultyProcessingData.BirthDate == null ? string.Empty : Model.FacultyProcessingData.BirthDate, new { @class = "form-control mrgn0 width-150 datepicker", @style = " placeholder='Birth Date'" })
                            </div>

                            <div class="form-group">
                                @Html.Label("Phone No")
                            
                                @Html.TextBox("Model.FacultyProcessingData.PhoneNo", Model.FacultyProcessingData.PhoneNo == null ? 0 : Model.FacultyProcessingData.PhoneNo, new { @class = "form-control mrgn0 width-150"})
                            </div>

                            <div class="form-group">
                                @Html.Label("Blood Group")
                            
                                @Html.TextBox("Model.FacultyProcessingData.BloodGroupId", Model.FacultyProcessingData.BloodGroupId == null ? 0 : Model.FacultyProcessingData.BloodGroupId, new { @class = "form-control mrgn0 width-150"})
                            </div>

                            <div class="form-group">
                                @Html.Label("Address")
                            
                                @Html.TextArea("Model.FacultyProcessingData.Address", Model.FacultyProcessingData.Address == null ? string.Empty : Model.FacultyProcessingData.Address, new { @class = "form-control mrgn0 width-150" })
                            </div>
                            <div class="form-group double-btn">
                                <button id="AddFacultyDetails1" class="btn btn-default ">Add Faculty</button>
                                
                            
                                <button id="reset" type="reset" class="btn btn-default">
                                    Reset</button>
                            </div>

                        </div>
                        
                    </fieldset>
                    
                </div>


